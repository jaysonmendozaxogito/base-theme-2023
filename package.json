{
  "name": "shopify-base-theme",
  "description": "Base theme: Vue + Tailwind + Shopify + Vite",
  "author": "Myntr",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "shopify:list": "shopify theme list --store=myntr-theme-dev.myshopify.com",
    "start": "run-p -sr shopify:dev vite:watch",
    "deploy": "run-s vite:build && cd shopify && shopify theme push",
    "deploy:new": "run-s vite:build && cd shopify && shopify theme push --unpublished",
    "vite:watch": "cross-env NODE_ENV=development vite build --watch --mode 'development' --config .config/vite.config.js",
    "vite:build": "cross-env NODE_ENV=production vite build --mode 'production' --config .config/vite.config.js",
    "shopify:dev": "cd shopify && shopify theme dev",
    "shopify:pull": "cd shopify && shopify theme pull",
    "lint": "run-s -c lint:*",
    "lint:js": "eslint src/**/*.{js,vue} --config .config/.eslintrc.js",
    "lint:css": "stylelint src/**/*.{vue,css} --config .config/.stylelintrc.js",
    "lint:shopify": "cd shopify && shopify theme check",
    "fix": "run-s -c fix:*",
    "fix:js": "eslint src/**/*.{js,vue} --config .config/.eslintrc.js --fix",
    "fix:css": "stylelint src/**/*.{vue,css} --config .config/.stylelintrc.js --fix",
    "fix:shopify": "cd shopify && shopify theme check -a"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "graphql-request": "^5.2.0",
    "pinia": "^2.0.33",
    "tailwindcss": "^3.1.6",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@modyqyw/vite-plugin-eslint": "^2.0.3",
    "@rollup/plugin-graphql": "^2.0.3",
    "@vitejs/plugin-vue": "^3.0.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-plugin-vue": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.8.5",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rollup-plugin-delete": "^2.0.0",
    "standard": "^17.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "vite": "^3.0.0",
    "vite-plugin-stylelint": "^3.0.2"
  }
}
